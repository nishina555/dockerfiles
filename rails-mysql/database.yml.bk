default: &default
  adapter: mysql2
  encoding: utf8
  pool: 5
  username: root
  password: <%= ENV.fetch['MYSQL_ROOT_PASSWORD', 'dummy'] %>
  host:     <%= ENV.fetch['MYSQL_HOST', 'db'] %>
  database: <%= ENV.fetch('MYSQL_DB_NAME', 'dummy') %>

development:
  <<: *default
  database: app_development

test:
  <<: *default
  database: app_test

production:
  <<: *default
  database: app_production
